<p>{{link-to 'New book' 'books.new'}}</p>

<table>
  <tr>
    <th>id</th>
    <th>Title</th>
    <th>Author</th>
    <th>Url</th>
  </tr>
  {{#each}}
    <tr>
      <td>{{link-to id 'books.show' this}}</td>
      <td>{{title}}</td>
      <td>{{author}}</td>
      <td>{{url}}</td>
    </tr>
  {{/each}}
</table>
